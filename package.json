{
  "name": "budgets-api",
  "version": "1.0.0",
  "description": "REST API for budget tracker app",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/rugglcon/budgets-api"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsnd --watch src src/server.ts",
    "start": "npm run build && node dist/server.js",
    "test": "NODE_ENV=test jest --passWithNoTests",
    "generate-migration": "npm run build && node ./node_modules/typeorm/cli.js migration:generate -n",
    "run-migration": "npm run build && node ./node_modules/typeorm/cli.js migration:run",
    "revert-migration": "npm run build && node ./node_modules/typeorm/cli.js migration:revert",
    "ci": "npm run lint && npm run test && npm run build",
    "lint": "tslint src/**/*.ts"
  },
  "author": "Connor Ruggles",
  "license": "GPL-3.0",
  "dependencies": {
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "concurrently": "^5.2.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-useragent": "^1.0.13",
    "http-status": "^1.4.2",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.18.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.24",
    "typescript": "^3.8.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/express-useragent": "^1.0.0",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/mysql": "^2.15.10",
    "@types/node": "^13.13.4",
    "@types/passport": "^1.0.3",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/winston": "^2.4.4",
    "express-jwt": "^6.0.0",
    "jest": "^25.5.4",
    "jest-cli": "^25.5.4",
    "supertest": "^4.0.2",
    "ts-jest": "^25.4.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.1.2"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\./)(test|spec))\\.(js?|ts?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
