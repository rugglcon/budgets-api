{
  "name": "budgets-api",
  "version": "1.0.0",
  "description": "REST API for budget tracker app",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/rugglcon/budgets-api"
  },
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && node dist/server.js",
    "start": "npm run dev",
    "test": "jest",
    "generate-migration": "npm run build && node ./node_modules/typeorm/cli.js migration:generate -n",
    "run-migration": "npm run build && node ./node_modules/typeorm/cli.js migration:run",
    "revert-migration": "npm run build && node ./node_modules/typeorm/cli.js migration:revert",
    "ci": "npm run lint && npm run build && npm run test",
    "lint": "tslint src/**/*.ts"
  },
  "author": "Connor Ruggles",
  "license": "GPL-3.0",
  "dependencies": {
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "concurrently": "^5.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-useragent": "^1.0.13",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.18.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.24",
    "typescript": "^3.8.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/express-useragent": "^1.0.0",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/mysql": "^2.15.9",
    "@types/node": "^12.12.30",
    "@types/passport": "^1.0.3",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/winston": "^2.4.4",
    "express-jwt": "^5.3.1",
    "jest": "^25.1.0",
    "jest-cli": "^25.1.0",
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.2",
    "tslint": "^6.1.0"
  }
}
